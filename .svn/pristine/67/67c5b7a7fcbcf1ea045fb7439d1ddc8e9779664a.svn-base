Options -Indexes -MultiViews
RewriteEngine On
RewriteBase /Prathtech-web/

# --------------------------------------------------
# Do NOT rewrite real files or folders (important)
# --------------------------------------------------
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# --------------------------------------------------
# Redirect index.php → /
# --------------------------------------------------
RewriteCond %{THE_REQUEST} \s/index\.php[?\s] [NC]
RewriteRule ^index\.php$ / [R=301,L]

# --------------------------------------------------
# Pretty URLs → PHP files (internal rewrite)
# --------------------------------------------------
RewriteRule ^$ index.php [L]

RewriteRule ^about-us/?$ about.php [L]
RewriteRule ^our-services/?$ ourservices.php [L]
RewriteRule ^careers/?$ career.php [L]
RewriteRule ^contact-us/?$ contact.php [L]
RewriteRule ^privacy-policy/?$ privacy-policy.php [L]
RewriteRule ^disclaimer/?$ disclaimer.php [L]
