      //       $(".error-number").text("Indian mobile numbers must start with 6, 7, 8, or 9");
      //    }
      //    else {
      //       $(".error-number").text("");
      //    }
      // });
      $("input[name='number']").on("input", function () {
         // Allow digits only
         this.value = this.value.replace(/[^0-9]/g, "");

         // Limit to 10 digits
         if (this.value.length > 10) {
            this.value = this.value.slice(0, 10);
         }

         let number = this.value;

         // All same digits (e.g. 1111111111)
         const sameDigits = /^(\d)\1{9}$/;

         // Sequential numbers (ascending or descending)
         const sequentialNumbers = /^(0123456789|1234567890|2345678901|3456789012|4567890123|5678901234|6789012345|7890123456|8901234567|9012345678|9876543210)$/;

         if (number.length < 10) {
            $(".error-number").text("Mobile number must be exactly 10 digits");
         }
         else if (!/^[6-9]/.test(number)) {
            $(".error-number").text("Indian mobile numbers must start with 6, 7, 8, or 9");
         }
         else if (sameDigits.test(number)) {
            $(".error-number").text("Invalid mobile number");
         }
         else if (sequentialNumbers.test(number)) {
            $(".error-number").text("Invalid mobile number");
         }
         else {
            $(".error-number").text("");
         }
      });



      $("input[name='email']").on("input", function () {
         // Allow only valid email characters
         this.value = this.value.replace(/[^a-zA-Z0-9@._+-]/g, "");

         let email = this.value.trim();

         // Must contain at least ONE letter before @
         const emailRegex = /^(?=.*[a-zA-Z])[a-zA-Z0-9._%+-]+@[a-zA-Z0-9.-]+\.[A-Za-z]{2,}$/;

         if (!emailRegex.test(email)) {
            $(".error-email").text("Enter a valid email address");
         } else {
            $(".error-email").text("");
         }
      });



      $("textarea[name='subject']").on("input", function () {
         let subject = $(this).val().trim();

         if (!/^[A-Za-z0-9 .,!?@#()\-_\r\n]{10,1000}$/s.test(subject)) {
            $(".error-subject").text("Message must be 10-1000 characters. Allowed: letters, numbers, spaces & symbols.");
         } else {
            $(".error-subject").text("");
         }
      });
      $("input[name='captcha_input']").on("input", function () {
         let captcha = $(this).val().trim();

         if (captcha.length !== 6) {
            $(".error-captcha").text("Enter valid captcha");
         } else {
            $(".error-captcha").text("");
         }
      });

      $("#contactForm").on("submit", function (e) {
         e.preventDefault();

         $(".text-danger").text("");

         let isValid = true;

         let name = $("input[name='name']").val().trim();
         let number = $("input[name='number']").val().trim();
         let email = $("input[name='email']").val().trim();
         let subject = $("textarea[name='subject']").val().trim();
         let captcha = $("input[name='captcha_input']").val().trim();

         // Escape HTML to prevent XSS (client side)
         const escapeInput = str => $("<div>").text(str).html();

         name = escapeInput(name);
         number = escapeInput(number);
         email = escapeInput(email);
         subject = escapeInput(subject);
         captcha = escapeInput(captcha);


         if (!/^[A-Za-z ]{3,80}$/.test(name)) {
            $(".error-name").text("Name must be 3-80 characters (letters & spaces only)");
            isValid = false;
         }

         if (!/^[0-9]{10}$/.test(number)) {
            $(".error-number").text("Mobile number must be exactly 10 digits");
            isValid = false;
         }
         else if (!/^[6-9]/.test(number)) {
            $(".error-number").text("Indian mobile numbers must start with 6, 7, 8, or 9");
            isValid = false;
         }

         if (!/^[a-zA-Z0-9._%+-]+@[a-zA-Z0-9.-]+\.[A-Za-z]{2,}$/.test(email)) {
            $(".error-email").text("Enter a valid email address");
            isValid = false;
         }

         if (!/^[A-Za-z0-9 .,!?@#()\-_\r\n]{10,1000}$/s.test(subject)) {
            $(".error-subject").text("Message must be 10-1000 characters. Allowed: letters, numbers, spaces & common symbols.");
            isValid = false;
         }

         if (captcha.length !== 6) {
            $(".error-captcha").text("Enter valid captcha");
            isValid = false;
         }

         if (!isValid) return;

         $.ajax({
            url: "mail.php",
            type: "POST",
            dataType: "json",
            data: $("#contactForm").serialize(),
            beforeSend: function () {
               $(".btn-submit").attr("disabled", true).text("Sending...");
               $("#pageLoader").show();
            },
            success: function (res) {
               $(".alert").remove();

               const alertHTML = `
                        <div class="alert alert-${res.status === "success" ? "success" : "danger"}">
                           ${res.status === "success" ? "✔" : "❌"} ${res.message}
                        </div>
                     `;

               $(".contact-form").prepend(alertHTML);

               if (res.status === "success") {
                  $("#contactForm")[0].reset();
                  loadCaptcha();
               }
            },
            error: function () {
               $(".contact-form").prepend(`
                        <div class="alert alert-danger">
                           ❌ Something went wrong!
                        </div>
                     `);
            },
            complete: function () {
               $(".btn-submit").attr("disabled", false).text("Send Message");
               $("#pageLoader").hide();
            }
         });
      });

   </script>

</body>

