Options -Indexes -MultiViews
RewriteEngine On

# IMPORTANT: set base to your project folder
RewriteBase /Prathtech-web/

# --------------------------------------------------
# Redirect .php URLs → clean URLs
# Example: /about-us.php → /about-us
# --------------------------------------------------
RewriteCond %{THE_REQUEST} \s/+Prathtech-web/(.+?)\.php[\s?] [NC]
RewriteRule ^ %1 [R=301,L]

# --------------------------------------------------
# Internally load PHP files without showing .php
# Example: /about-us → about-us.php
# --------------------------------------------------
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.+?)/?$ $1.php [L]

# --------------------------------------------------
# Home page
# --------------------------------------------------
RewriteRule ^$ index [L]
